@model BrakehillBarnsBooking.Models.BookingViewModel

@{
    ViewData["Title"] = "Booking Confirmation";
}

<style>
    .confirmation-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 600px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        font-weight: bold;
    }

    .custom-back-link {
        color: #000; 
        padding: 8px 10px 8px 0; 
        font-size: 16px;
        text-decoration: none; 
    }
</style>

<div class="background"></div>
<form asp-action="Complete" asp-controller="Home" method="post">
<div class="container">
    <div class="confirmation-container">
        <a href="javascript:history.back()" class="custom-back-link">&lt; <u>Back</u></a>
        <div style="text-align: center;">
            <h2>Booking Details</h2>
        </div>
        <table>
            <tr>
                <th>Check-In Date</th>
                <td>@Model.CheckIn.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Check-Out Date</th>
                <td>@Model.CheckOut.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Accommodation Type</th>
                <td>@Model.Accommodation</td>
            </tr>
            <tr>
                <th>Number of People</th>
                <td>@Model.NumPeople</td>
            </tr>
            <tr>
                <th>Bringing Dogs</th>
                <td>@(Model.BringingDogs ? "Yes" : "No")</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.Phone</td>
            </tr>
        </table>
            <button type="submit" style="background: #0077cc; color: #fff; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin-top: 10px;">Submit</button>
        </div>
    </div>
</form>
