@model List<string>
@{
    ViewData["Title"] = "Messages";
}

<div class="messages-container">
    <h2>All Messages</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var message in Model)
                {
                    var messageLines = message.Split('\n');
                    <tr>
                        <td>@messageLines[0].Substring(6)</td>
                        <td>@messageLines[1].Substring(7)</td>
                        <td>@messageLines[2].Substring(8)</td>
                        <td>
                            <form asp-action="DeleteMessage" asp-route-index="@(Model.IndexOf(message))" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">No messages found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
