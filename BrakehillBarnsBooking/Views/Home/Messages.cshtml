@model List<string>
@{
    ViewData["Title"] = "Messages";
}

<div class="container">
    <h2>All Messages</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Action</th> <!-- Action Column -->
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @for (var i = 0; i < Model.Count; i++)
                {
                    string[] messageLines = Model[i].Split('\n');
                    <tr>
                        <td>@messageLines[0].Substring(6)</td>
                        <td>@messageLines[1].Substring(7)</td>
                        <td>@messageLines[2].Substring(8)</td>
                        <td>
                            <form asp-action="DeleteMessage" asp-route-index="@i" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">No messages found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
